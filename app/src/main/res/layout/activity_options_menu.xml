<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:soundEffectsEnabled="true"
    tools:context="com.DigiOrg.OptionsMenu">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto-delete events 1 day old"
        android:id="@+id/autoDeleteCheckbox"
        android:checked="true"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_optionsMenu_viewOld"
        android:layout_marginTop="17dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Interface Sounds"
        android:textSize="18sp"
        android:id="@+id/interfaceSoundsCheckbox"
        android:checked="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/autoDeleteCheckbox" />

    <TextView
        android:id="@+id/textView_optionsMenu_soundsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Alert Sounds"
        android:layout_below="@+id/interfaceSoundsCheckbox" />

    <Spinner
        android:id="@+id/spinner_options_alertSounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Alert Sounds"
        android:layout_below="@+id/textView_optionsMenu_soundsText" />

    <TextView
        android:id="@+id/textView_optionsMenu_popupMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Popup Messages"
        android:layout_below="@+id/spinner_options_alertSounds" />

    <Spinner
        android:id="@+id/spinner_options_popupMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pop-up Message"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView_optionsMenu_popupMsg" />

    <TextView
        android:id="@+id/textView_optionsMenu_pushNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Push Notifications"
        android:layout_below="@+id/spinner_options_popupMsg" />

    <Spinner
        android:id="@+id/spinner_options_pushNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Push-Notification"
        android:layout_below="@+id/textView_optionsMenu_pushNotification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Old Events"
        android:id="@+id/button_optionsMenu_viewOld"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_optionsMenu_back"
        android:src="@android:drawable/ic_menu_revert"
        android:tint="@android:color/holo_orange_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
