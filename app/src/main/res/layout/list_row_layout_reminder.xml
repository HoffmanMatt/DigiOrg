<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:soundEffectsEnabled="true"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_layoutReminder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:textSize="19sp"
        android:maxWidth="180dp"
        android:textColor="#0404B4"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView_layoutReminder_frequencyOutput"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView_layoutReminder_timeOutput"
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_layoutReminder_frequencyOutput"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView_layoutReminder_dateOutput"
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_layoutReminder_timeOutput"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_marginBottom="7dp"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView_layoutReminder_countdown"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_layoutReminder_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:typeface="sans" />

</RelativeLayout>