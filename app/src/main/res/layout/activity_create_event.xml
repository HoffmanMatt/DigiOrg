<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:soundEffectsEnabled="true"
    tools:context="com.DigiOrg.CreateEvent"
    android:id="@+id/layout">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventText_EditReminderByDays_name"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/priority_input"
        android:layout_alignEnd="@+id/eventText_EditReminderByDays_comment" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/eventText_EditReminderByDays_comment"
        android:hint="Additional Notes"
        android:layout_alignTop="@+id/priority_input"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to priority list"
        android:id="@+id/priority_input"
        android:checked="false"
        android:textSize="19sp"
        android:layout_marginBottom="78dp"
        android:layout_above="@+id/back_button"
        android:layout_alignStart="@+id/eventText_EditReminderByDays_comment"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/add_event_button"
        android:minWidth="160dp"
        android:nestedScrollingEnabled="false"
        android:background="#ff96ff46"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/eventText_EditReminderByDays_name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_button"
        android:minWidth="160dp"
        android:background="#ffff441f"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@+id/eventText_EditReminderByDays_name"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:scaleX="0.9"
        android:scaleY="0.7"/>


</RelativeLayout>
